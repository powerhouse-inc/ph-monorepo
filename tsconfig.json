{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "declaration": false,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "baseUrl": "./",
    "allowJs": true
  },
  "include": ["*.config.js", "*.json", "packages/**/*"],
  "exclude": [
    "node_modules/",
    "dist/",
    "build/",
    "storybook-static/",
    "coverage/",
    ".nx/",
    "gen/",
    "docs/",
    "coverage/",
    "browser.js",
    "packages/*/node_modules/",
    "packages/*/dist/",
    "packages/*/build/",
    "packages/*/storybook-static/",
    "packages/*/coverage/",
    "packages/*/gen/",
    "packages/*/docs/",
  ]
}
